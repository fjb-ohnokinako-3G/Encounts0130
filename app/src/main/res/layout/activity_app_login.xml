<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.encount.photo.user.UserLogin">

    <ImageView
        android:id="@+id/LoginImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/app_logo"/>

    <TextView
        android:id="@+id/LoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/userLogin"
        android:layout_below="@+id/LoginImg"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etUserMail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/LoginTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_design"
        android:drawableLeft="@drawable/edit_text_mail"
        android:ems="10"
        android:hint="@string/userLoginMail"
        android:inputType="textEmailAddress"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etUserPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_design"
        android:drawableLeft="@drawable/edit_text_pass"
        android:ems="10"
        android:layout_marginEnd="70dp"
        android:hint="@string/userLoginPass"
        android:inputType="textPassword"
        android:layout_below="@+id/etUserMail"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="15sp"
        android:layout_above="@+id/btnLogin"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/Progress"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="?android:attr/progressBarStyle"
        android:layout_above="@+id/btnLogin"
        android:indeterminateTint="@color/colorMain"
        android:layout_marginBottom="10dp"
        tools:visibility="visible"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/LoginMenu"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#00bde7"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="15dp"
        android:background="#FFDF1961">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:text="@string/userLogin"
                android:textSize="18sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/LoginMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <!--<TextView
            android:id="@+id/btnPassForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userPassForgot"
            android:layout_marginEnd="30dp"/>-->

        <TextView
        android:id="@+id/btnUserSingin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userLoginNew"
        android:layout_marginStart="30dp"/>

    </LinearLayout>

</RelativeLayout>
